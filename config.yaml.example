# 服务器配置
server:
  host: "0.0.0.0"
  port: 8080
  read_timeout: 30s
  write_timeout: 30s
  idle_timeout: 60s

# 数据库配置
database:
  postgres:
    host: "${DB_HOST}"
    port: 5432
    user: "${DB_USER}"
    password: "${DB_PASSWORD}"
    dbname: "${DB_NAME}"
    sslmode: "${DB_SSL_MODE}"
    timezone: "UTC"

# JWT配置
jwt:
  secret: "${JWT_SECRET}"
  expires_in: 24h
  refresh_expires_in: 168h

# 代理配置
proxy:
  timeout: 30s
  max_idle_conns: 100
  max_idle_conns_per_host: 10
  idle_conn_timeout: 90s

# 日志配置
logging:
  level: "debug"
  format: "json"
  output: "stdout"
  file_path: "logs/app.log"
  max_size: 100
  max_backups: 3
  max_age: 28

# 安全配置
security:
  cors:
    allowed_origins:
      - "*"
    allowed_methods:
      - "GET"
      - "POST"
      - "PUT"
      - "DELETE"
      - "OPTIONS"
    allowed_headers:
      - "*"
    allow_credentials: true
  rate_limit:
    requests_per_minute: 100
    burst: 200

# 缓存配置
cache:
  redis:
    addr: "localhost:6379"
    password: ""
    db: 0
    pool_size: 10
    min_idle_conns: 5

# 监控配置
monitoring:
  metrics_enabled: true
  health_check_path: "/health"
  metrics_path: "/metrics"
